<section>
  <div class="container max-w-5xl mx-auto">
    <div class="text-gray-100 text-xl px-12 mb-24 w-full">
      {% for episode in episodes %}
      <a href="{{ episode.url | url }}" aria-labelledby="episodelabel">
        <div
          class="flex-initial w-full overflow-hidden bg-nero rounded-lg h-32 md:h-40 shadow-lg mb-8"
        >
          <div class="flex items-center h-32 md:h-40">
            <div
              class="w-3/12 sm:w-1/6 px-8 text-center border-r-2 h-full flex flex-col items-center justify-center"
            >
              <p class="text-xl sm:text-3xl md:text-5xl leading-tight">
                #{{ episode.data.number }}
              </p>
              <p class="text-lg md:text-xl leading-tight">
                {{ episode.data.air_date | episodeShortDate }}
              </p>
              <p class="text-sm md:text-lg leading-tight">
                {{ episode.data.air_date | episodeYearDate }}
              </p>
            </div>
            <div class="w-9/12 sm:w-3/6 px-8 items-center text-grey-100">
              <p
                id="episodelabel"
                class="font-bold text-sm sm:text-lg md:text-2xl"
              >
                {{ episode.data.title }}
              </p>
              <p class="text-sm md:text-lg">{{ episode.data.short_desc }}</p>
            </div>
            <div
              class="w-3/12 sm:w-2/6 border-l-2 p-4 h-full hidden sm:flex justify-center items-center"
            >
              <img src="{{ episode.data.thumbnail }}" style="width: 213px" />
            </div>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
